<div class="container">
  <div class="row">
    <div class="col s5 push-s7 white-text">
        <h1><%= @player.name %></h1>
        <p>Grade: <%= @player.grade %></p>
        <p>Primary Position: <%= @player.position1 %></p>
        <p>2nd Position: <%= @player.position2 %></p>
        <p>3rd Position: <%= @player.position3 %></p>
        <p>Coordinated: <%= @player.coordinated %></p>
        <p>Club Experience: <%= @player.club_exp %></p>
        <p>Team: <%= @player.team_id %></p>
    </div>
    <div class="col s7 pull-s5">
      <div class="row"></div>
      <div class="row"></div>
      <div class="row"></div>
        <%= image_tag @player.image.url %>
    </div>
  </div>
  <div class="row center-align">
    <div class="player-btn waves-effect waves-light btn #bdbdbd grey lighten-1">
        <%= link_to "Back to List", players_path %>
    </div>
    <div class="player-btn waves-effect waves-light btn #bdbdbd grey lighten-1">
        <%= link_to "Edit", edit_player_path %>
    </div>
    <div class="player-btn waves-effect waves-light btn #bdbdbd grey lighten-1">
        <%= link_to "Delete", player_path(@player), method: :delete, data: { confirm: "Are you sure you want to delete this player?"} %> 
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="card #43a047 green darken-1">
      <div class="card-content white-text">
        <span class="card-title"> Coaches Comments </span>
         <div class="waves-effect waves-light btn #bdbdbd grey lighten-1">
          <%= link_to "Add Comment", new_player_comment_path(@player) %>
          </div>
        <ul>
            <% @player.comments.each do |comment| %>
                <li><%= comment.comment %></li>
                    By: <%= comment.coach.name  %> &nbsp;&nbsp;
                    <%= comment.created_at.strftime("%B %d %Y") %>
                    <hr>

            <% end %>
        </ul>
      
     
    </div>
  </div>
</div>









