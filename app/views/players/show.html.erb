
<div class="col s7 push-s5">
    <%= image_tag @player.image.url %>
</div>

<div class="col s5 pull-s7">
    <h1><%= @player.name %></h1>
    <p>Grade: <%= @player.grade %></p>
    <p>Primary Position: <%= @player.position1 %></p>
    <p>2nd Position: <%= @player.position2 %></p>
    <p>3rd Position: <%= @player.position3 %></p>
    <p>Coordinated: <%= @player.coordinated %></p>
    <p>Club Experience: <%= @player.club_exp %></p>
    <p>Team: <%= @player.team_id %></p>
</div>






<%= link_to "Back to Roster", players_path %>

<%= link_to "Edit", edit_player_path %>

<%= link_to "Delete Player", player_path(@player), method: :delete, data: { confirm: "Are you sure you want to delete this player?"} %>