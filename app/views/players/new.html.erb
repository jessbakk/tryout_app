

<div class="container">
 <div class="row white-text">
   <div class="col s12 m4 l2"></div>
   <div class="col s12 m4 l8">
    <div class="card #43a047 green darken-1">
            <div class="card-content white-text">
              <span class="card-title">Add Player</span>
              <p id="alert"><%= alert %></p>
              <%= form_for @player do |f| %>
              <div class="field">
                  <%= f.label :name %>
                  <%= f.text_field :name %>
              </div>
              <div class="field">
                  <%= f.label :grade %>
                  <%= f.text_field :grade %>
              </div>
              <div class="field">
                  <%= f.label :number %>
                  <%= f.text_field :number %>
              </div>
              <div class="field">
                  <%= f.label :position1 %>
                  <%= f.text_field :position1 %>
              </div>
              <div class="field">
                  <%= f.label :position2 %>
                  <%= f.text_field :position2 %>
              </div>
              <div class="field">
                  <%= f.label :position3 %>
                  <%= f.text_field :position3 %>
              </div>
              <div class="field">
                  <%= f.label :coordinated %>
                  <%= f.text_field :coordinated %>
              </div>
              <div class="field">
                  <%= f.label :club_exp %>
                  <%= f.text_field :club_exp %>
              </div>
              <%= f.file_field :image %>
              <div class="actions black-text"><%= f.submit %></div>
              <% end %>
            </div>
            <div class="col s12 m4 l2"></div>
          </div>
        </div>
      </div>
</div>