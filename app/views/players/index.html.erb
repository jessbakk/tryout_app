<h1>Player List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>Position 1</th>
      <th>Position 2</th>
      <th>Position 3</th>
      <th>Coordinated</th>
      <th>Club Exp.</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player_path(player) %> </td>
        <td><%= player.grade %></td>
        <td><%= player.position1 %></td>
        <td><%= player.position2 %></td>
        <td><%= player.position3 %></td>
        <td><%= player.coordinated %></td>
        <td><%= player.club_exp %></td>
        <td><%= player.team_id %></td>
        <td><a class='dropdown-button btn' href='#' data-activates='dropdown1'>Action</a></td>

         <ul id='dropdown1' class='dropdown-content'>
            <li><a href="#!">one</a></li>
            <li><a href="#!">two</a></li>
            <li class="divider"></li>
            <li><a href="#!">three</a></li>
            <li><a href="#!"><i class="material-icons">view_module</i>four</a></li>
            <li><a href="#!"><i class="material-icons">cloud</i>five</a></li>
         </ul>        
        
      </tr>

       <a class='dropdown-button btn' data-activates='dropdown2'>Drop Me!</a>

        <!-- Dropdown Structure -->
        <ul id='dropdown2' class='dropdown-content'>
          <li><a href="#!">one</a></li>
          <li><a href="#!">two</a></li>
          <li class="divider"></li>
          <li><a href="#!">three</a></li>
          <li><a href="#!"><i class="material-icons">view_module</i>four</a></li>
          <li><a href="#!"><i class="material-icons">cloud</i>five</a></li>
        </ul>
    <% end %>
  </tbody>


  </table>



