
<div class="row"></div>
  <h4><span class="green-text darken-1">Prospect List</span></h4>

<div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Grade</th>
        <th>Position 1</th>
        <th>Position 2</th>
        <th>Position 3</th>
        <th>Coordinated</th>
        <th>Club Exp.</th>
        <th>Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= link_to player.name, player_path(player) %> </td>
          <td><%= player.grade %></td>
          <td><%= player.position1 %></td>
          <td><%= player.position2 %></td>
          <td><%= player.position3 %></td>
          <td><%= player.coordinated %></td>
          <td><%= player.club_exp %></td>
          <td><%= player.team_id %></td>
          <td>
          <a class='dropdown-button btn' href='#' data-activates=<%= "dropdown#{player.id}" %>>Action</a>
          <ul id= <%= "dropdown#{player.id}" %> class='dropdown-content'> 
              <li><%= link_to 'Edit Player', edit_player_path(player) %></li>
              <li><%= link_to 'Delete', player_path(player), method: :delete %></li>
          </ul>
          </td>    
        </tr>
      <% end %>
    </tbody>


    </table>




  <hr><hr>
</div>


<%= link_to "Add Player", new_player_path %>
